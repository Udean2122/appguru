<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:screenOrientation="portrait"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:weightSum="100"
                    android:orientation="horizontal"
                    android:background="#00A6FF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageProfile"
                        android:src="@drawable/user1"
                        android:padding="10dp"
                        android:layout_weight="30"
                        android:layout_width="0dp"
                        android:layout_height="90dp"/>

                    <LinearLayout
                        android:id="@+id/llFragment"
                        android:orientation="vertical"
                        android:layout_weight="40"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">


                        <TextView
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:layout_marginTop="15dp"
                            android:id="@+id/nicknameProfile"
                            android:text="RIFQI NAUFAL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:weightSum="100"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_gravity="start"
                                android:src="@drawable/star"
                                android:layout_weight="30"
                                android:layout_width="0dp"
                                android:layout_height="30dp"/>

                            <TextView
                                android:text="0"
                                android:textStyle="bold"
                                android:textColor="#fff"
                                android:textSize="30dp"
                                android:layout_gravity="center"
                                android:fontFamily="@font/calibrib"
                                android:layout_weight="50"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>


                        </LinearLayout>




                    </LinearLayout>







                </LinearLayout>







            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="bottom"
                    android:paddingBottom="15dp"
                    android:paddingLeft="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">




                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/ll2"
                android:layout_below="@id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="200dp">

                        <LinearLayout
                            android:id="@+id/riwayatPesanan"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/orderku"
                                android:layout_width="20dp"
                                android:layout_height="20dp"/>

                            <TextView
                                android:layout_marginStart="8dp"
                                android:text="Riwayat Pesanan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>



                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:id="@+id/kontakKami"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/contact"
                                android:layout_width="20dp"
                                android:layout_height="20dp"/>

                            <TextView
                                android:layout_marginStart="8dp"
                                android:text="Support Center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>



                        <LinearLayout
                            android:id="@+id/faq"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/help"
                                android:layout_width="20dp"
                                android:layout_height="20dp"/>

                            <TextView
                                android:text="F,A,Q"
                                android:layout_marginStart="8dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>



                        <LinearLayout
                            android:id="@+id/Kebijakan"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/privacy_policy"
                                android:layout_width="20dp"
                                android:layout_height="20dp"/>

                            <TextView
                                android:layout_marginStart="8dp"
                                android:text="Kebijakan Privasi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/syaratKetentuan"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/policy"
                                android:layout_width="20dp"
                                android:layout_height="20dp"/>

                            <TextView
                                android:layout_marginStart="8dp"
                                android:text="Syarat Dan Ketentuan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </RelativeLayout>








        </RelativeLayout>
    </LinearLayout>




</androidx.coordinatorlayout.widget.CoordinatorLayout>